{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters":{
        "basic":{
            "format":"%(levelname)s: %(message)s"
        },
        "advanced":{
            "format":"%(levelname)s %(asctime)s from %(module)s, line %(lineno)s at %(funcName)s: %(message)s",
            "datefmt":"%Y-%m-%dT%H:%M%S%z"
        }
    },
    "handlers":{
        "stdout":{
            "class": "logging.StreamHandler",
            "formatter":"basic",
            "stream":"ext://sys.stdout"
        },
        "stderr":{
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter":"basic",
            "stream":"ext://sys.stderr"
        },
        "file":{
           "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter":"advanced",
            "filename":"logs/verification.log",
            "maxBytes":10000000,
            "backupCount":3
        }
    },
    "loggers":{
        "root":{
            "level":"DEBUG",
            "handlers":["stdout","file"]
        }
    }
}